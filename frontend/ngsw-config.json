{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(eot|svg|cur|jpg|png|webp|gif|otf|ttf|woff|woff2|ani)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "pikachu-cache",
      "urls": [
        "https://pokeapi.co/api/v2/pokemon/25"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 1,
        "maxAge": "1d"
      }
    },
    {
      "name": "pokemon-api",
      "urls": [
        "https://pokeapi.co/api/v2/pokemon/**"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 20,
        "maxAge": "1h",
        "timeout": "5s"
      }
    },
    {
      "name": "pokemon-images",
      "urls": [
        "https://raw.githubusercontent.com/PokeAPI/sprites/**"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 20,
        "maxAge": "1d"
      }
    }
  ]
}
